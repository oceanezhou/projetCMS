IDEA 

- .gitignore
- index.php
- src/
    - app/
        - modules/
            - default/
                - controllers/
                - models/
                - views/
            - admin/
                - controllers/
                - models/
                - views/
    - config/
        - config.php
        - autoloader.php
        - routes.php
    - lib/
        - library/
    - data/
        - db.sql
        OR
        - database/
    - .htaccess
- public/
    - css
    - img
    - scripts


